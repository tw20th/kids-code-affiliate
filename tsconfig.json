{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // ğŸ‘ˆ å¿˜ã‚Œãšè¿½åŠ 
    "paths": {
      "@/*": ["./*"],
      "lib/*": ["lib/*"], // ğŸ‘ˆ ã“ã‚Œã ã‘ã§OK
      "blog/*": ["blog/*"],
      "analyze/*": ["analyze/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
